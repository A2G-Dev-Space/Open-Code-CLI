{
  "name": "local-cli",
  "version": "2.6.0",
  "description": "LOCAL-CLI - OpenAI-Compatible Local CLI Coding Agent",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "lcli": "dist/cli.js",
    "lcli-dev": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "postbuild": "chmod +x dist/cli.js",
    "dev": "ts-node src/cli.ts",
    "start": "node dist/cli.js",
    "watch": "tsc --watch",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "test": "cd tests && python -m pytest test_eval.py -v",
    "test:quick": "cd tests && python -m pytest test_eval.py -v -m 'not slow'",
    "prepr": "npm run lint && npm run build"
  },
  "keywords": [
    "cli",
    "ai",
    "llm",
    "openai",
    "local-llm",
    "coding-assistant",
    "coding-agent",
    "vllm",
    "ollama",
    "offline"
  ],
  "author": "LOCAL-CLI Team",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "chalk": "^4.1.2",
    "commander": "^11.1.0",
    "ink": "^4.4.1",
    "ink-select-input": "^5.0.0",
    "ink-spinner": "^5.0.0",
    "ink-text-input": "^5.0.1",
    "inquirer": "^8.2.6",
    "ora": "^5.4.1",
    "react": "^18.3.1",
    "semver": "^7.7.3"
  },
  "devDependencies": {
    "@types/inquirer": "^9.0.7",
    "@types/node": "^20.10.5",
    "@types/react": "^19.2.2",
    "@types/semver": "^7.7.1",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "esbuild": "^0.25.12",
    "eslint": "^8.56.0",
    "prettier": "^3.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
