{
  "name": "nexus-coder",
  "version": "2.5.0",
  "description": "Nexus Coder - Enterprise AI Coding Assistant",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "nexus": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "postbuild": "chmod +x dist/cli.js",
    "dev": "ts-node src/cli.ts",
    "start": "node dist/cli.js",
    "watch": "tsc --watch",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "test": "NODE_OPTIONS='--experimental-vm-modules' jest --config jest.config.mjs",
    "test:watch": "NODE_OPTIONS='--experimental-vm-modules' jest --config jest.config.mjs --watch",
    "test:coverage": "NODE_OPTIONS='--experimental-vm-modules' jest --config jest.config.mjs --coverage",
    "test:e2e": "node --max-old-space-size=512 --expose-gc node_modules/tsx/dist/cli.mjs test/e2e/run-e2e.ts",
    "test:e2e:verbose": "node --max-old-space-size=512 --expose-gc node_modules/tsx/dist/cli.mjs test/e2e/run-e2e.ts --verbose",
    "test:e2e:live": "node --max-old-space-size=512 --expose-gc node_modules/tsx/dist/cli.mjs test/e2e/run-e2e.ts --live",
    "test:e2e:list": "npx tsx test/e2e/run-e2e.ts --list",
    "test:all": "npm run test && npm run test:e2e",
    "prepr": "npm run lint && npm run test:e2e",
    "evaluate": "npx tsx evaluation/run-evaluation.ts",
    "evaluate:quick": "npx tsx evaluation/run-evaluation.ts -- --test 1,2,3 --format both"
  },
  "keywords": [
    "cli",
    "ai",
    "llm",
    "openai",
    "local-llm",
    "coding-assistant",
    "coding-agent",
    "vllm",
    "ollama",
    "offline"
  ],
  "author": "LOCAL-CLI Team",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "chalk": "^4.1.2",
    "commander": "^11.1.0",
    "ink": "^4.4.1",
    "ink-select-input": "^5.0.0",
    "ink-spinner": "^5.0.0",
    "ink-text-input": "^5.0.1",
    "inquirer": "^8.2.6",
    "ora": "^5.4.1",
    "react": "^18.3.1",
    "semver": "^7.7.3"
  },
  "devDependencies": {
    "@types/inquirer": "^9.0.7",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.10.5",
    "@types/react": "^19.2.2",
    "@types/semver": "^7.7.1",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "esbuild": "^0.25.12",
    "eslint": "^8.56.0",
    "jest": "^30.2.0",
    "prettier": "^3.1.1",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.6",
    "typescript": "^5.3.3"
  }
}
