{
  "name": "nexus-coder",
  "version": "2.9.1",
  "description": "Nexus Coder - Enterprise AI Coding Assistant",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "nexus": "dist/cli.js",
    "nexus-dev": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "postbuild": "chmod +x dist/cli.js",
    "postinstall": "node scripts/patch-yoga.js",
    "dev": "ts-node src/cli.ts",
    "start": "node dist/cli.js",
    "watch": "tsc --watch",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "test": "cd tests && python -m pytest test_eval.py -v",
    "test:quick": "cd tests && python -m pytest test_eval.py -v -m 'not slow'",
    "prepr": "npm run lint && npm run build",
    "bundle": "npm run build && esbuild dist/cli.js --bundle --platform=node --target=node20 --outfile=bundle/cli.cjs --format=cjs --external:fsevents",
    "pkg": "npm run bundle && pkg bundle/cli.cjs --out-path ./bin --targets node20-linux-x64 -o bin/nexus",
    "pkg:linux": "npm run bundle && pkg bundle/cli.cjs --targets node20-linux-x64 --out-path ./bin -o bin/nexus-linux",
    "pkg:win": "npm run bundle && pkg bundle/cli.cjs --targets node20-win-x64 --out-path ./bin -o bin/nexus-win.exe",
    "pkg:mac": "npm run bundle && pkg bundle/cli.cjs --targets node20-macos-x64 --out-path ./bin -o bin/nexus-macos",
    "pkg:all": "npm run bundle && pkg bundle/cli.cjs --targets node20-linux-x64,node20-win-x64,node20-macos-x64 --out-path ./bin",
    "bun:build": "node scripts/inject-version.js && npm run build && bun build dist/cli.js --compile --outfile bin/nexus && cp node_modules/yoga-wasm-web/dist/yoga.wasm bin/"
  },
  "pkg": {
    "assets": [
      "package.json"
    ]
  },
  "keywords": [
    "cli",
    "ai",
    "llm",
    "openai",
    "local-llm",
    "coding-assistant",
    "coding-agent",
    "vllm",
    "ollama",
    "offline"
  ],
  "author": "LOCAL-CLI Team",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "chalk": "^4.1.2",
    "commander": "^11.1.0",
    "ink": "^4.4.1",
    "ink-select-input": "^5.0.0",
    "ink-spinner": "^5.0.0",
    "ink-text-input": "^5.0.1",
    "inquirer": "^8.2.6",
    "open": "^11.0.0",
    "ora": "^5.4.1",
    "react": "^18.3.1",
    "semver": "^7.7.3",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@types/inquirer": "^9.0.7",
    "@types/node": "^20.10.5",
    "@types/react": "^19.2.2",
    "@types/semver": "^7.7.1",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@yao-pkg/pkg": "^6.11.0",
    "esbuild": "^0.25.12",
    "eslint": "^8.56.0",
    "prettier": "^3.1.1",
    "react-devtools-core": "^4.28.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
